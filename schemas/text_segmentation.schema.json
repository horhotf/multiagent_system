{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://local/mas/text_segmentation.schema.json",
  "title": "TextSegmentation",
  "type": "object",
  "additionalProperties": false,
  "required": ["segments"],
  "properties": {
    "profile": { "type": "string", "default": "default" },
    "segments": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/segment" }
    }
  },
  "$defs": {
    "segment": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "type", "text"],
      "properties": {
        "id": { "type": "string", "pattern": "^[a-zA-Z0-9_\\-]{1,32}$" },
        "type": {
          "type": "string",
          "enum": ["context", "facts", "requirements", "constraints", "assumptions", "risks", "output_format", "other"]
        },
        "text": { "type": "string", "minLength": 1 }
      }
    }
  }
}
