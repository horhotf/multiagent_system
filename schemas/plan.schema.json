{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://local/mas/plan.schema.json",
  "title": "ExecutionPlan",
  "type": "object",
  "additionalProperties": false,
  "required": ["intent", "subtasks"],
  "properties": {
    "intent": {
      "type": "string",
      "enum": ["auto", "json_object", "search", "validate_text", "image", "pptx"]
    },
    "objective": { "type": "string", "minLength": 1 },
    "constraints": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "language": { "type": "string", "default": "ru" },
        "strict": { "type": "boolean", "default": true },
        "max_steps": { "type": "integer", "minimum": 1, "maximum": 20, "default": 10 }
      }
    },
    "subtasks": {
      "type": "array",
      "minItems": 1,
      "maxItems": 20,
      "items": { "$ref": "#/$defs/subtask" }
    }
  },
  "$defs": {
    "subtask": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "goal", "deliverable", "tool_candidates"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_\\-]{1,32}$"
        },
        "goal": { "type": "string", "minLength": 1 },
        "deliverable": {
          "type": "string",
          "enum": [
            "evidence_list",
            "chunks_with_citations",
            "db_entities",
            "json_object_draft",
            "json_object_final",
            "validation_report",
            "image_artifact",
            "pptx_artifact",
            "text_segments"
          ]
        },
        "tool_candidates": {
          "type": "array",
          "minItems": 1,
          "maxItems": 8,
          "items": { "type": "string", "minLength": 1 }
        },
        "depends_on": {
          "type": "array",
          "items": { "type": "string" },
          "default": []
        },
        "input_hints": {
          "type": "object",
          "additionalProperties": true,
          "default": {}
        },
        "quality": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "min_confidence": { "type": "number", "minimum": 0, "maximum": 1, "default": 0.6 },
            "max_items": { "type": "integer", "minimum": 1, "maximum": 50, "default": 10 }
          },
          "default": {}
        }
      }
    }
  }
}
